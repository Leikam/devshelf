{
    "description": {
        "main": "all basic settigns are stored in options.json, also you can store secure settings in special secure-options.json file that will extend basic settings"
    },

    "app": {
      "port":8080,
      "devPort":8888
    },

    "voting" : {
        "updateInterval": "180000"
    },

    "l18n" : {
        "tempCurrentLang" : "ru",

        "additionalLangs":["ru"],
        "defaultLang": "en"
    },

    "remoteDBhost": "127.0.0.1",
    "remoteDBport": "27017",

    "cookieSecret": "secret",

    "dataOutputDir":"/public/output/",
    "articlesDataFile": "all-data.json",
    "articlesVoteFile": "all-votes.json",

    "articlesDataLangFile": "pure.json",
    "articlesCleanLangObjPrefix": "pure-",

    "articlesDataCron": "180000",

    "github": {
        "devAppID": "github devAppID",
        "devAppSecret": "github devAppSecret",

        "appID": "github appID",
        "appSecret": "github appSecret"
    },

    "cookie": {
        "secret": "secret",
        "key": "pid",
        "httpOnly": false,
        "originalMaxAge": null
    }
}